<Window x:Class="DocumentPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Document Printer" Height="132.504" Width="525" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="292*"/>
            <ColumnDefinition Width="225*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbFolder" Height="23" Margin="10,26,10,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False" Grid.ColumnSpan="2"/>
        <Label Content="Folder:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Button x:Name="bPrint" Content="Print Files" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="bPrint_Click"/>
        <Button x:Name="bFolder" Content="Select Folder" HorizontalAlignment="Left" Margin="90,0,0,10" VerticalAlignment="Bottom" Width="75" Click="bFolder_Click"/>
        <ProgressBar x:Name="pBar" HorizontalAlignment="Right" Height="10" Margin="0,10,10,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>

    </Grid>
</Window>
